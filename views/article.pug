extends layout

block content
  
  h1 #{ article.title }
  h5 Written by #{author}
  p= article.body 
  hr
  .container.d-flex.flex-column.flex-md-row.justify-content-between
   a.btn.btn-secondary(href='/') Back
   if user
     if user.id == article.author
       a.btn.btn-secondary(href='/articles/edit/'+article._id) Edit 
       a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete
   
